<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBFBFF"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/default_image"
            android:onClick="OnClick"/>

        <Spinner
            android:id="@+id/spinner_edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/hospitalname_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="병원명"
            android:ems="5"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/latitude_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="위도"
                android:ems="5"/>

            <EditText
                android:id="@+id/longitude_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="경도"
                android:ems="5"/>

        </LinearLayout>
        <EditText
            android:id="@+id/opentime_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="영업시간"
            android:ems="10"
            android:layout_gravity="center"/>



        <Button
            android:id="@+id/Fragment_Edit_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편집"
            android:onClick="FragmentEditClick"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>